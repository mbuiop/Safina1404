<resources>
    <!-- تم اصلی برنامه -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/ui_primary</item>
        <item name="colorPrimaryVariant">@color/ui_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ui_accent</item>
        <item name="colorSecondaryVariant">@color/ship_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/space_dark</item>
        <item name="android:statusBarColor">@color/space_deep_blue</item>
        <item name="android:navigationBarColor">@color/space_deep_blue</item>
    </style>

    <!-- تم تمام صفحه برای بازی -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/space_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- استایل‌های متن -->
    <style name="TextAppearance.GameTitle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.GameSubtitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextAppearance.GameHUD">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextAppearance.GameButton">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- استایل‌های دکمه -->
    <style name="Widget.GameButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_game</item>
        <item name="android:textAppearance">@style/TextAppearance.GameButton</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.GameButton.Primary" parent="Widget.GameButton">
        <item name="backgroundTint">@color/button_normal</item>
    </style>

    <style name="Widget.GameButton.Secondary" parent="Widget.GameButton">
        <item name="backgroundTint">@color/ui_surface</item>
    </style>

    <style name="Widget.GameButton.Accent" parent="Widget.GameButton">
        <item name="backgroundTint">@color/ui_accent</item>
    </style>

    <!-- استایل‌های کارت -->
    <style name="Widget.GameCard" parent="CardView">
        <item name="cardBackgroundColor">@color/ui_surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- استایل‌های نوار پیشرفت -->
    <style name="Widget.GameProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_game</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <!-- استایل‌های سوئیچ -->
    <style name="Widget.GameSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:trackTint">@color/ui_surface</item>
        <item name="android:thumbTint">@color/ui_primary</item>
    </style>

    <!-- استایل‌های اسلایدر -->
    <style name="Widget.GameSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_game</item>
        <item name="android:thumb">@drawable/thumb_game</item>
    </style>
</resources>
