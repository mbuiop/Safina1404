<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.space.ship.game">

    <!-- دسترسی‌های مورد نیاز -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- ویژگی‌های سخت‌افزاری -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <!-- پشتیبانی از تمام صفحه و حالت افقی -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullscreenTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="31"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- اکتیویتی اصلی بازی -->
        <activity
            android:name=".SpaceShipGame"
            android:exported="true"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- متادیتا برای بازی -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="games-activity" />
        </activity>

        <!-- اکتیویتی منوی اصلی -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- اکتیویتی تنظیمات -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- اکتیویتی آمار و دستاوردها -->
        <activity
            android:name=".StatsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- سرویس موسیقی پس‌زمینه -->
        <service
            android:name=".BackgroundMusicService"
            android:enabled="true"
            android:exported="false" />

        <!-- ارائه‌دهنده فایل‌های پشتیبان -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.space.ship.game.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
